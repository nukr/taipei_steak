extends layout

block content
  .row-fluid
    .span6
      .box
        .title
          h4
            span 員工資料
        .content
          form.form-horizontal(action='#')
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 姓名
                  input#normalInput.span8(type='text', name="realname")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 電話
                  input#normalInput.span8(type='text', name="phone")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 帳號
                  input#normalInput.span8(type='text', name="username")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 密碼
                  input#normalInput.span8(type='password', name="password")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 確認密碼
                  input#normalInput.span8(type='password', name="confirm-password")
            .form-actions
              button.btn.btn-info(type='submit') Save changes
              | &nbsp;
              button.btn(type='button') Cancel
      // End .box
    // End .span6
    .span6
      .box
        .title
          h4
            span.icon16.icomoon-icon-user
            span 員工列表
        .content.noPad
          table.responsive.table.table-bordered
            thead
              tr
                th #
                th Name
                th Phone
                th Username
                th Actions
            tbody
              each emp in emps
                tr
                  td 
                  td= emp.realname
                  td= emp.phone
                  td= emp.username
                  td
                    .controls.center
                      a.tip(href='#', title='Edit task')
                        span.icon12.icomoon-icon-pencil
                      a.tip(href='#', title='Remove task')
                        span.icon12.icomoon-icon-remove
