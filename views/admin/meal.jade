extends layout
block content
  .row-fluid
    .span6
      .box
        .title
          h4
            span 新增套餐
        .content
          form.form-horizontal(action='#')
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 套餐名稱
                  input#normalInput.span8(type='text', name="realname")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='normal') 價格
                  input#normalInput.span8(type='text', name="phone")
            .form-row.row-fluid
              .span12
                .row-fluid
                  label.form-label.span4(for='checkboxes') 套餐總類
                  .span8.controls
                    select.nostyle(name='category', multiple='multiple')
                      option(selected="selected", value="normal") 一般套餐
                      option(value="event") 活動套餐
                      option(value="single") 加點商品
            .form-actions
              button.btn.btn-info(type='submit') Save changes
              | &nbsp;
              button.btn(type='button') Cancel
    .span6
      .box
        .title
          h4
            span 套餐列表
        .content.noPad
          table.responsive.table.table-bordered
            thead
              tr
                th #
                th Name
                th Phone
                th Category
                th Actions
            tbody
              each meal in meals
                tr
                  td
                  td= meal.name
                  td= meal.price
                  td= meal
                  td
                    .controls.center
                      a.tip(href='#', title='Edit task')
                        span.icon12.icomoon-icon-pencil
                      a.tip(href='#', title='Remove task')
                        span.icon12.icomoon-icon-remove
      // End .box
    // End .span6

